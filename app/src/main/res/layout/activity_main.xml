<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".MainActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="状态栏"
        android:textColor="@color/colorPrimary"
        android:textSize="25dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:background="@color/colorPrimary"
        android:orientation="vertical">
        <com.zlyandroid.sysstatusbar.statusbar.widget.SystemStatusView
            android:id="@+id/status_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:isShowVol="false"
            app:isShowLocation="false"
            android:layout_gravity="right">
        </com.zlyandroid.sysstatusbar.statusbar.widget.SystemStatusView>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="电池"
        android:textColor="@color/colorPrimary"
        android:textSize="25dp"
          />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/zly_color_Grey300"
        android:gravity="center"
        android:padding="20dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.zlyandroid.sysstatusbar.statusbar.widget.BatteryView
                android:id="@+id/batteryview"
                android:layout_width="28dp"
                android:layout_height="13dp"/>
            <TextView
                android:id="@+id/tv_system_battery"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/zly_color_white"
                android:text="100%"
                android:textSize="10dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <com.zlyandroid.sysstatusbar.statusbar.widget.BatteryView
                android:id="@+id/batteryview2"
                android:layout_width="50dp"
                android:layout_height="25dp"/>
            <TextView
                android:id="@+id/tv_system_battery2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/zly_color_white"
                android:text="100%"
                android:textSize="16dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"

            android:orientation="horizontal">
            <com.zlyandroid.sysstatusbar.statusbar.widget.BatteryView
                android:id="@+id/batteryview3"
                android:layout_width="50dp"
                android:layout_height="25dp"/>
            <TextView
                android:id="@+id/tv_system_battery3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/zly_color_white"
                android:text="100%"
                android:textSize="16dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <com.zlyandroid.sysstatusbar.statusbar.widget.BatteryView
                android:id="@+id/batteryview4"
                android:layout_width="50dp"
                android:layout_height="25dp"/>
            <TextView
                android:id="@+id/tv_system_battery4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/zly_color_white"
                android:text="100%"
                android:textSize="16dp" />
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="信号"
        android:textColor="@color/colorPrimary"
        android:textSize="25dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/zly_color_Grey300"
        android:gravity="center"
        android:padding="20dp"
        android:orientation="vertical">
        <com.zlyandroid.sysstatusbar.statusbar.widget.SignalView
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            app:signal_maximum="4"
            app:signal_level="4"
            app:spacing="1"
            app:unit_width="10"
            app:level_color="@color/zly_color_white"
            app:primary_color="@color/zly_color_Grey500"
            app:shadow_color="@color/zly_color_transparent"
            />
        <com.zlyandroid.sysstatusbar.statusbar.widget.SignalView
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            app:signal_maximum="4"
            app:signal_level="4"
            app:spacing="1"
            app:unit_width="10"
            app:shadow_open="true"
            app:level_color="@color/zly_color_white"
            app:primary_color="@color/zly_color_Grey500"
            app:shadow_color="@color/zly_color_Grey500"
            />

        <com.zlyandroid.sysstatusbar.statusbar.widget.SignalView
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            app:signal_maximum="4"
            app:signal_level="2"
            app:spacing="1"
            app:unit_width="10"
            app:level_color="@color/zly_color_white"
            app:primary_color="@color/zly_color_Grey500"
            app:shadow_color="@color/zly_color_transparent"
            />
        <com.zlyandroid.sysstatusbar.statusbar.widget.SignalView
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            app:signal_maximum="4"
            app:signal_level="0"
            app:spacing="1"
            app:unit_width="10"
            app:connected="false"
            app:level_color="@color/zly_color_white"
            app:primary_color="@color/zly_color_Grey500"
            app:shadow_color="@color/zly_color_transparent"
            />
        <com.zlyandroid.sysstatusbar.statusbar.widget.SignalView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            app:signal_maximum="5"
            app:signal_level="4"
            app:spacing="0"
            app:unit_width="15"
            app:level_color="@color/zly_color_white"
            app:primary_color="@color/zly_color_Grey500"
            app:shadow_color="@color/zly_color_transparent"
            />
    </LinearLayout>




</LinearLayout>